{
  "name": "@mochetts/vue-slideshow",
  "version": "1.0.1",
  "description": "A clean and easy slideshow component made with Vue.js",
  "author": {
    "name": "Martin Mochetti",
    "email": "martin.mochetti@gmail.com",
    "url": "http://mochetts.com"
  },
  "main": "./dist/vue-slideshow.common.js",
  "license": "MIT",
  "keywords": [
    "vue",
    "slideshow",
    "slide",
    "slim"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mochetts/vue-slideshow.git"
  },
  "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
  "files": [
    "dist/*",
    "components/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "stage": "vue build --target lib --name vue-slideshow ./packs/yarn.js",
    "release": "yarn stage && yarn publish --access public"
  },
  "lint-staged": {
    "*.{js,vue}": "yarn lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "animate.css": "^3.7.2",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.0",
    "jest": "^24.1.0",
    "lint-staged": "^10.0.0",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^10.1.0",
    "vue-jest": "^4.0.0-0"
  }
}
